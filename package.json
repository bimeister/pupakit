  "repository": {
    "type": "git",
    "url": "https://git.bimeister.io/common/pupakit.git"
  },
  "scripts": {
    "autofix": "npm run linter:fix",
    "create-untracked-files": "npm run barrel:all && npm run styling:all",
    "ğŸ—ï¸": "Build",
    "build:kit": "npm run create-untracked-files && ng build --project pupakit && npm run bundle:all && npm run replace:all",
    "build:demo": "npm run create-untracked-files && ng build --project=demo",
    "build:demo-stage": "npm run create-untracked-files && ng build --project=demo --base-href #",
    "build:demo-ci": "npm run create-untracked-files && ng build --project=demo --base-href \"${CI_PAGES_URL}/\"",
    "ğŸš€": "Run server",
    "start": "npm run create-untracked-files && ng serve --project=demo --open --host 0.0.0.0 --port 4201",
    "ğŸ”": "Linting files",
    "linter:check-ci": "ng lint --configuration=inspection-ci",
    "linter:fix": "ng lint --configuration=debugging",
    "linter:formatting": "npm run formatter:check",
    "linter:spell-checker": "npm run spell-checker:check",
    "linter:circular-dependencies": "node ./node_modules/@bimeister/build-cli/executable.js developer circular-dependencies --path=\"projects\" --ts_config=\"tsconfig.json\"",
    "linter:all": "ng lint --configuration=inspection-ci && npm run formatter:check && npm run linter:spell-checker && npm run linter:circular-dependencies",
    "ğŸ§ª": "Run autotests",
    "test:ci": "ng test --configuration=ci",
    "test:debug": "ng test --configuration=debugging",
    "ğŸ’«": "Replacements",
    "replace:assets-reference:single-quote": "replace-in-file \"/'/assets//g\" \"'~@bimeister/pupakit/assets/\" \"./dist/**/*.*css\" --verbose --isRegex",
    "replace:assets-reference:double-quote": "replace-in-file '/\"/assets//g' '\"~@bimeister/pupakit/assets/' './dist/**/*.*css' --verbose --isRegex",
    "replace:all": "npm run replace:assets-reference:single-quote && npm run replace:assets-reference:double-quote",
    "ğŸ¥«": "Barrel export files generation",
    "barrel:components": "barrelsby --config ./barrelsby.json --directory ./projects/kit/src/lib/components",
    "barrel:internal": "barrelsby --config ./barrelsby.json --directory ./projects/kit/src/internal",
    "barrel:all": "npm run barrel:components && npm run barrel:internal",
    "ğŸ’…": "Styling files generation",
    "styling:variables": "ts-node ./build/node/create-adaptive-variables.script.ts",
    "styling:color-maps": "ts-node ./build/node/create-colors-map.script.ts",
    "styling:convert-scss-to-css": "sass --load-path=node_modules ./projects/kit/src/styles/styles.scss ./dist/lib/styles.css",
    "styling:all": "npm run styling:variables && npm run styling:color-maps && npm run styling:convert-scss-to-css",
    "ğŸ“¦": "Bundle generation",
    "bundle:styles": "ts-node ./build/node/copy-styles-to-dist-folder.script.ts",
    "bundle:assets": "ts-node ./build/node/copy-assets-to-dist-folder.script.ts",
    "bundle:all": "npm run ts-node ./build/node/copy-styles-to-dist-folder.script.ts && npm run ts-node ./build/node/copy-assets-to-dist-folder.script.ts",
    "ğŸ–¼ï¸": "Formatting",
    "formatter:fix": "prettier --loglevel warn --config ./.prettierrc --ignore-path ./.prettierignore --write \"./**/*.{html,css,scss,json,js,ts}\"",
    "formatter:check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check \"./**/*.{html,css,scss,json,js,ts}\"",
    "ğŸ’¬": "Spell checking",
    "spell-checker:check": "cspell lint './projects/**/*.*' --config cspell.json"
  },
  "dependencies": {
    "@angular/cdk": "~12.2.6",
